@model SL.Web.Controllers.ErrorViewModel
@{
    ViewData["Title"] = "Sunucu Hatası";
    Layout = "_Root";
}

<!--begin::Page bg image-->
<style>
    body {
        background-image: url('/themes/metronic-v1/assets/media/auth/bg7.jpg');
    }

    [data-bs-theme="dark"] body {
        background-image: url('/themes/metronic-v1/assets/media/auth/bg7-dark.jpg');
    }
</style>
<!--end::Page bg image-->
<!--begin::Authentication - Signup Welcome Message -->
<div class="d-flex flex-column flex-center flex-column-fluid">
    <!--begin::Content-->
    <div class="d-flex flex-column flex-center text-center p-10">
        <!--begin::Wrapper-->
        <div class="card card-flush w-lg-650px py-5">
            <div class="card-body py-15 py-lg-20">
                <!--begin::Title-->
                <h1 class="fw-bolder fs-2qx text-gray-900 mb-4">Sistem Hatası</h1>
                <!--end::Title-->
                <!--begin::Text-->
                <div class="fw-semibold fs-6 text-gray-500 mb-7">@Model.Message (<a
                        href="https://www.youtube.com/watch?v=P9mLUhDnCk4">Farklı bir yaklaşım için inceleyiniz</a>)
                </div>
                <!--end::Text-->
                <!--begin::Illustration-->
                <div class="mb-11">
                    <img src="~/themes/metronic-v1/assets/media/auth/500-error.png"
                        class="mw-100 mh-300px theme-light-show" alt="" />
                    <img src="~/themes/metronic-v1/assets/media/auth/500-error-dark.png"
                        class="mw-100 mh-300px theme-dark-show" alt="" />
                </div>
                <!--end::Illustration-->
                <!--begin::Link-->
                <div class="mb-0">
                    <a href="javascript:history.back()" class="btn btn-sm btn-primary">
                        <i class="ki-outline ki-arrow-left fs-2"></i>
                        Geri Dön
                    </a>
                </div>
                <!--end::Link-->
            </div>
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Content-->
</div>